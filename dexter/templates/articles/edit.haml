%%inherit(file="../layout.haml")
%%namespace(file="../bootstrap_wtf.haml", **{'import': '*'})

%%block(name="title")
  Edit article -
  &= doc.title

#edit-document
  %form(action=url_for('edit_article', id=doc.id), method='POST')
    = form.csrf_token
    %article
      %ul.nav.nav-tabs
        %li.active
          %a(href="#details-tab", dataToggle="tab")
            Details
        %li
          %a(href="#analysis-tab", dataToggle="tab")
            Analysis

      .tab-content
        %section#details-tab.tab-pane.active
          .form-horizontal
            = field(form.title, placeholder='Article headline', required=True)
            = field(form.url, placeholder='URL')
            = field(form.blurb, placeholder='Blurb')

          .row
            .col-sm-offset-2.col-sm-2
              = vertical_field(form.published_at, placeholder='YYYY/MM/DD', class_='use-datepicker')
            .col-sm-3
              = vertical_field(form.medium_id, required=True, class_='chosen-select')
            .col-sm-3

          .form-horizontal
            = field(form.text, rows=15, placeholder='The text of the article', required=True)


        #analysis-tab.tab-pane
          = field(form.topic_id, class_='chosen-select')

      .row
        .col-sm-10.col-sm-offset-2
          %input.btn.btn-primary(type='submit', value='Save', dataDisableWith='Saving...')

