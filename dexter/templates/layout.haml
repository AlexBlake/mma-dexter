- from flask.ext.login import current_user
- from dexter.helpers import country_flag, body_tag_args

!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(httpEquiv="X-UA-Compatible", content="IE=edge,chrome=1")
    %title
      %%block(name="title")
      \- Dexter
    %meta(name='csrf-param', content='csrf_token')
    %meta(name='csrf-token', content=csrf_token())
    %meta(name="viewport", content="width=device-width, initial-scale=1.0")

    - import newrelic.agent
    = newrelic.agent.get_browser_timing_header()

    - for url in webassets('css'):
      %link(rel="stylesheet", href=url)

    %%block(name="extra_header_tags")

  %body(**body_tag_args())
    %header
      .navbar.navbar-default._navbar-fixed-top.navbar-inverse
        .container
          .navbar-header
            %a.navbar-brand(href="/")
              Dexter

          - if current_user.is_authenticated():
            .navbar-nav.navbar-btn
              %a.btn.btn-primary(href=url_for('new_article'))
                %i.fa.fa-plus
                Add article

            %ul.nav.navbar-nav
              %li(class_=('active' if request.url_rule.endpoint == 'activity' else ''))
                %a.btn.btn-link(href=url_for('activity'))
                  Reports
              %li(class_=('active' if request.url_rule.endpoint == 'monitor_dashboard' else ''))
                %a.btn.btn-link(href=url_for('monitor_dashboard'))
                  My Dashboard

              - if current_user.admin:
                %li
                  %a.btn.btn-link(href='/admin/')
                    Dexter Admin

            .navbar-nav.navbar-right
              %ul.nav.navbar-nav
                %li
                  %a.dropdown-toggle(href="#", dataToggle='dropdown')
                    = country_flag(current_user.country, **{"data-placement": 'bottom'})
                    &= current_user.full_name()
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a(href=url_for('monitor_dashboard'))
                        My Dashboard
                    %li
                      %a(href=url_for('security.logout'))
                        Logout

            %form.navbar-form.navbar-right(action=url_for('search'))
              .form-group
                %input.form-control.allow-enter(type='text', name='q', placeholder='Find people')

    %%block(name='pre_content')

    .container
      -# show flash messages
      - for category, message in (get_flashed_messages(with_categories=True) or []):
        - category = 'info' if category == 'message' else category
        - category = 'danger' if category == 'error' else category
        %p.alert(class_="alert-" + category)
          &= message

      ${next.body()}

    %footer
      .container
        .col-sm-3
          %p
            &copy; 2014
            %a(href="http://www.mediamonitoringafrica.org") Media Monitoring Africa
          %p
            %a(href="mailto:dexter@mma.org.za") dexter@mma.org.za

        .col-sm-3
          %a(href="http://www.mediamonitoringafrica.org/", target="_blank")
            %img.logo(src="/public/images/mma-logo.png")

        .col-sm-6.text-right
          %a(href="http://www.code4sa.org/", target="_blank")
            %img.logo(src="/public/images/code4sa-logo-small.png")

          %a(href="http://www.alchemyapi.com/", target="_blank")
            %img.logo.partner(src="/public/images/alchemyapi-logo.png")

          %a(href="http://www.opencalais.com/", target="_blank")
            %img.logo.partner(src="/public/images/calais-logo.jpg")

    - for url in webassets('js'):
      %script(src=url)

    %%block(name="extra_javascript")

    = newrelic.agent.get_browser_timing_footer()
